<div class="intro-section" id="home-section">

  <div class="slide-1" style="background-image: url('<%= image_url "hero_1.jpg" %>');" data-stellar-background-ratio="0.5">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-12">
          <div class="row align-items-center">
            <div class="col-lg-6 mb-4">
              <h1  data-aos="fade-up" class='intro_header' data-aos-delay="100"><%= t(:text_main_tagline) %></h1>
              <p class="mb-4"  data-aos="fade-up" data-aos-delay="200"><%= t(:text_intro_title_subscription) %></p>
              <% unless user_signed_in? %>
                <p data-aos="fade-up" data-aos-delay="300"><%= link_to "<span>#{t(:text_login)}</span>".html_safe, new_user_session_path, class: "btn btn-primary py-3 px-5 btn-pill",  data: {toggle: 'modal', target: '#modal-window'}, remote: true %></p>
              <% end %>
            </div>

            <div class="col-lg-5 ml-auto" data-aos="fade-up" data-aos-delay="500">
              <% if user_signed_in? %>
                <%= render partial: 'welcome/user_signed_in' %>
              <% else %>
                <%= render partial: 'welcome/sign_up_form' %>
            <% end %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>