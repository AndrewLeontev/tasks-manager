<div class="site-section bg-light" id="contact-section">
  <div class="container">

    <div class="row justify-content-center">
      <div class="col-md-7">



        <h2 class="section-title mb-3"><%= t(:label_text_contact_form_title) %></h2>
        <p class="mb-5"><%= t(:text_contact_form_short_description) %></p>

        <div class="bm-5">
          <ul id="feedback_info" class="info_block"></ul>
        </div>

        <%= form_with(model: @feedback, url: feedback_path, data: {aos: 'fade'}) do |f| %>
          <div class="form-group row">
            <div class="col-md-6 mb-3 mb-lg-0">
              <%= f.text_field :first_name, placeholder: t(:label_text_contact_form_fname),  class: 'form-control'  %>
            </div>
            <div class="col-md-6">
              <%= f.text_field :last_name, placeholder: t(:label_text_contact_form_lname), required: true,  class: 'form-control'  %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-md-12">
              <%= f.text_field :subject, placeholder: t(:label_text_contact_form_subject), required: true, class: 'form-control'  %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-md-12">
              <%= f.email_field :email, placeholder: t(:label_text_contact_form_user_email), class: 'form-control'  %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-12">
              <%= f.text_area :body, placeholder: t(:label_text_contact_form_user_message), cols: 30, rows: 10, required: true, class: 'form-control'  %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-md-6">
              <%= f.submit t(:btn_text_contact_us_form_submit), class: 'btn btn-primary py-3 px-5 btn-block btn-pill', remote: true %>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>