<form action="/users" method="post" class="form-box" data-remote="true">
  <h3 class="h4 text-black mb-4"><%= t(:text_sign_up) %></h3>

  <div class="register_block_inform inform_black_text"></div>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-group">
    <input type="email" name="user[email]" class="form-control" placeholder="<%= t(:label_email_address) %>">
  </div>
  <div class="form-group">
    <input type="password" name="user[password]" class="form-control" required  minlength="6" placeholder="<%= t(:label_password) %>">
  </div>
  <div class="form-group mb-4">
    <input type="password" class="form-control" name="user[password_confirmation]" required minlength="6" placeholder="<%= t(:label_password_confirmtion) %>">
  </div>
  <div class="form-group">
    <input type="submit" class="btn btn-primary btn-pill" required minlength="6" value="<%= t(:text_sign_up) %>">
  </div>
</form>
